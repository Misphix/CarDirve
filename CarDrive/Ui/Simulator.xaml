<UserControl x:Class="CarDrive.Ui.Simulator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="clr-namespace:CarDrive.Ui"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Loaded="Simulator_OnLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="0.3*" />
        </Grid.RowDefinitions>
        <Canvas x:Name="MapField" SizeChanged="MapField_OnSizeChanged" Grid.Row="0" Background="BlueViolet" />
        <ui:DashBoard Grid.Row="1" BorderThickness="10" />
    </Grid>
</UserControl>
